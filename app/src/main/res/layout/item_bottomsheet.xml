<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Chọn danh mục"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/black" />
    </RelativeLayout>
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginBottom="20sp"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape_tv_blue"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_lunch_dining_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvTK"
                android:gravity="center|left"
                android:textStyle="bold"
                android:layout_marginStart="16sp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Tiếp khách"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape_tv_blue"

                android:padding="6dp"
                android:src="@drawable/ic_baseline_airplanemode_active_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvDL"
                android:textStyle="bold"
                android:gravity="center|left"
                android:layout_marginStart="16sp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Đi lại"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape_tv_blue"

                android:padding="6dp"
                android:src="@drawable/ic_baseline_airline_seat_recline_extra_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvLT"
                android:textStyle="bold"
                android:gravity="center|left"
                android:layout_marginStart="16sp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Lưu trú"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape_tv_blue"

                android:padding="6dp"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvKhac"
                android:gravity="center|left"
                android:textStyle="bold"
                android:layout_marginStart="16sp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Khác"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>