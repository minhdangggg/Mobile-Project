<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.fee.AddFeeActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            android:background="@color/color_blue"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="THÔNG TIN CHI PHÍ"
                android:textColor="@color/black"
                android:padding="15dp"
                android:background="@color/gray_mo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_price_change_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:textSize="14sp"
                    android:hint="Nhập chi phí"
                    android:inputType="number"
                    android:textColor="@color/color_blue"
                    android:id="@+id/edtFee"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_bookmarks_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16sp"
                        android:gravity="center|start"
                        android:id="@+id/edtDanhMuc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/v"
                        android:layout_marginStart="5dp"
                        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                        android:textColor="@color/black" />
                    <View
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/v"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_message_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:textSize="14sp"
                    android:hint="Ghi chú"
                    android:textColor="@color/black"
                    android:id="@+id/edtContent"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center|start"
                        android:id="@+id/tvDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/ve"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black" />
                    <View
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/ve"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                android:text="THÔNG TIN ĐỊA ĐIỂM"
                android:textColor="@color/black"
                android:padding="15dp"
                android:background="@color/gray_mo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_home_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:textSize="14sp"
                    android:hint="Nhập địa chỉ"
                    android:textColor="@color/black"
                    android:id="@+id/tvAddressCompany"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:textSize="14sp"
                    android:hint="Nhập tên đường"
                    android:textColor="@color/black"
                    android:id="@+id/tvStreet"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                android:text="THÔNG TIN HÓA ĐƠN"
                android:textColor="@color/black"
                android:padding="15dp"
                android:background="@color/gray_mo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="6dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_feed_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>